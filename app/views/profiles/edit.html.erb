<div class="card-form pb-4 px-3">
  <div class="container">
    <div class="row p-5">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 py-5 px-4 my-5 shadow bg-white">
        <%= form_with model: @user, url: profile_path, local: true do |f| %>
          <%= render 'layouts/error_messages', model: f.object %>
          <%= render 'shared/flash_message' %>

          <%= f.label :avatar, User.human_attribute_name("avatar") %>
          <%= f.file_field :avatar, class: 'form-control mb-3' %>
          <%= f.hidden_field :user_avatar_cache %>

          <%= f.label :name, User.model_name.human %>
          <%= f.text_field :name, class: 'form-control mb-3' %>

          <%= f.label :residence, User.human_attribute_name("residence") %>
          <%= f.collection_select :residence, Prefecture.all, :name, :name, { include_blank: '選択してください' }, class: 'form-control mb-3' %>        

          <%= f.label :hobbies, User.human_attribute_name("hobbies") %>
          <%= f.text_field :hobbies, class: 'form-control mb-3' %>

          <%= f.label :self_introduction, User.human_attribute_name("self_introduction") %>
          <%= f.text_area :self_introduction, class: 'form-control mb-3' %>
          
          <%= f.submit "更新", class: "btn btn-primary"%>
        <% end %>
      </div>
    </div>
  </div>
</div>