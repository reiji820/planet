<header class="header">
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
    <%= link_to root_path, class: 'header-brand' do %>
      <%= image_tag 'linkedin_banner_image_1.png', size: '200x100' %>
    <% end %>

    <div class="ml-auto d-flex align-items-center">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <%= link_to profile_path, class: 'dropdown-item' do %>
            <i class="fa fa-user"></i> <%= t('defaults.mypage') %>
          <% end %>
          <li class="nav-item">
            <%= link_to new_post_path, class: 'dropdown-item' do %>
              <i class="fa fa-pencil-alt"></i> <%= t('defaults.PostNew') %>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to logout_path, method: :delete, data: { confirm: "ログアウトしますか？" }, class: 'dropdown-item' do %>
              <i class="fa fa-sign-out-alt"></i> <%= t('defaults.logout') %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
