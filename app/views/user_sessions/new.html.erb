<div class="card-form pb-4 px-3">
  <div class="container mb-4">
    <div class="row p-5">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 py-5 px-4 my-5 shadow bg-white">
        <%= form_with url: login_path, local: true do |f| %>
          <%= render 'shared/flash_message' %>
          <div class="form-group">
            <%= f.label :email, User.human_attribute_name("email") %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password, User.human_attribute_name("password") %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="fw-bold">
            <%= f.submit 'ログイン', class: 'btn btn-primary', id: "login" %>
          </div>
        <% end %>
        <div class='text-center'>
          <br>
          <a href="#"><%= t('.password_forget') %></a>
          <br>
          <%= link_to t('.to_register_page'), new_user_path %>
        </div>
      </div>
    </div>
  </div>
</div>